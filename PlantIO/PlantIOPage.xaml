<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
		xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
		xmlns:local="clr-namespace:PlantIO" x:Class="PlantIO.PlantIOPage">
	
	<StackLayout>
		<Label Text="Welcome to PlantIO!" VerticalOptions="Center" HorizontalOptions="Center" />
		<Button Text="Scan Devices" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" Clicked="OnButtonClicked" />	
		<Picker x:Name="blePicker" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" Title="Select BLE device" />

		<StackLayout Padding="10,10,10,10" Orientation="Horizontal" HorizontalOptions="FillAndExpand" >
			<Label Text="Sample Rate: " WidthRequest="150"/>
			<Entry x:Name="sampleRate" Placeholder="Sample Rate" HorizontalTextAlignment="Center" />
			<Picker x:Name="sampleRatePicker" >
				<Picker.Items>
	            	<x:String>Minutes</x:String> 
	            	<x:String>Hours</x:String>
					<x:String>Days</x:String>
	        	</Picker.Items>
				<Picker.SelectedIndex>0</Picker.SelectedIndex>
    		</Picker> 
		</StackLayout>

		
		<Button Text="Connect" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" Clicked="OnButtonClickedConnect" />	
		<Label x:Name="devName" Text="Device Name:" VerticalOptions="Center" HorizontalOptions="Center" />


		<StackLayout Padding="10,10,10,10" >
			<Label Text="Board Data" TextColor="Gray" FontSize="Large" />

			<StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand" >
				<Label Text="Soil Moisture Sensor: " />
				<Entry x:Name="sm_sensor" Placeholder="0" HorizontalTextAlignment="Center" />
    		</StackLayout>
			
			<StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand" >
				<Label Text="Light Sensor: " />
				<Entry x:Name="light_sensor" Placeholder="0" HorizontalTextAlignment="Center" />
    		</StackLayout>
				
			<StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand" >
				<Label Text="Temp : "/>
				<Entry x:Name="temp_sensor" Placeholder="0" HorizontalTextAlignment="Center" />
    		</StackLayout>
			
		</StackLayout>

		
	</StackLayout>

	<!--<StackLayout Padding="10,10,10,10" BackgroundColor="White">
	  <Button x:Name="btn_scan_device" BorderColor="Black" Text="Scan" TextColor="Green" TranslationY="150" WidthRequest="60" HeightRequest="50" Clicked="ButtonScan"/>
	  <StackLayout x:Name="sl_deviceList">
	    <ListView x:Name="lv_deviceList">
	      <Label x:Name="lbl_deviceList" />
	    </ListView>
	  </StackLayout>
	</StackLayout>-->

	
</ContentPage>
